@{
  Layout="Shared/_Layout.cshtml";
}

@if (@Model.Count == 0)
{
  <p>No bands have been added yet!</p>
}
else
{
  <h1>Bands</h1>
  <hr>
  <ul>
    @foreach (var band in Model)
    {
        <li><a href="/bands/detail/@band.GetId()">@band.GetName()</a></li>
    }
  </ul>
}
<hr>
<form action="/bands/delete" method="post">
  <h4><a href="/bands/new">Add New</a> |
  <button class="btn" type="submit">Clear All</button></h4>
</form>
<hr>
<h4><a href="/">Return Home</a></h4>
