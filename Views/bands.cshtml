@{
  Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No bands have been added yet!</p>
}
else
{
  <h1>Recipes (Sorted by highest rated)</h1>
  <hr>
  <ul>
    @foreach (var recipe in Model)
    {
        <li><a href="/bands/detail/@recipe.GetId()">@recipe.GetName()</a></li>
    }
  </ul>
}
<form action="/bands/delete" method="post">
  <h4><a href="/bands/new">Add New</a> |
  <button class="btn" type="submit">Clear All</button></h4>
</form>
<hr>
<h4><a href="/">Return Home</a></h4>
